#!/usr/bin/env python3

import gi
gi.require_version("Gtk", "3.0")
from gi.repository import Gtk, Gdk

def show(name, sel):
    cb = Gtk.Clipboard.get(sel)
    ok, targets = cb.wait_for_targets()
    print(f"{name}: ok={ok}")
    if ok:
        for t in targets:
            print("  ", t.name())

show("CLIPBOARD", Gdk.SELECTION_CLIPBOARD)
show("PRIMARY",   Gdk.SELECTION_PRIMARY)
